<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/provisioningText"
        android:layout_height="@dimen/textview_height"
        android:layout_width="@dimen/textview_width"    
        android:textSize="@dimen/font_size"
        android:width="3500dp"
        android:lines="2"
        android:editable="false"
        android:layout_marginTop="10dp"
        android:hint="@string/provisioning_text"
        />
     <Button
        android:id="@+id/home_button_aes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button_aes"
        />
    <Button
        android:id="@+id/home_button_rot13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button_rot13"
        />
    <EditText
        android:id="@+id/rot13_plainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="600dp"
        android:lines="1"
        android:layout_marginTop="10dp"
        android:inputType="text|textNoSuggestions"
        />        
    <TextView
        android:id="@+id/rot13_cipherText"
        android:textSize="@dimen/font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="600dp"
        android:lines="1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/home_button_rot13"
        android:editable="false"
        android:hint="@string/cipherTextHint"
        />    
    <Button
        android:id="@+id/home_button_rsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/home_button_rsa"
        />
    <Button
        android:id="@+id/home_button_sha256"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button_sha256"
        />
</LinearLayout>

